{
  "description": "Optimized config for 0014_H_AO_COA case - large complex aorta with coarctation, scale 0.1m. Features adaptive band scaling and automatic relative sizing for stable layer coverage.",
  
  "openfoam_env_path": "source /opt/openfoam12/etc/bashrc",
  
  "mesh": {
    "base_size_mode": "diameter",
    "cells_per_diameter": 12,
    "min_cells_per_throat": 6
  },
  "SCALING": {
    "scale_m": 0.1
  },

  "refinement": {
    "surface_levels": [1, 2],
    "near_band_dx": 7,
    "far_band_dx": 14,
    "feature_angle": {
      "init": 25,
      "step": 15
    }
  },
  
  "layers": {
    "n": 8,
    "expansion": 1.15,
    "first_layer": {
      "t_over_dx": 0.4,
      "t1_min_frac": 0.03,
      "t1_max_frac": 0.25
    }
  },
  
  "physics": {
    "solver_mode": "RANS",
    "flow_model": "turbulent",
    "y_plus": 25,
    "U_peak": 1.2,
    "rho": 1060.0,
    "mu": 0.0035,
    "use_womersley_bands": false,
    "heart_rate_hz": 1.0
  },
  
  "accept": {
    "maxNonOrtho": 70,
    "maxSkewness": 3.8,
    "min_layer_coverage": 0.65
  },
  
  "compute": {
    "procs": 4,
    "cell_budget_kb_per_cell": 1.0
  },
  
  "iterations": {
    "max": 4,
    "ladder": [[1,2], [1,2], [2,2], [1,3]],
    "use_robust_optimization": true,
    "use_coverage_gated_progression": true
  },
  
  "advanced": {
    "BLOCKMESH": {
      "resolution": 160,
      "grading": [1, 1, 1]
    },
    
    "SNAPPY": {
      "maxLocalCells": 3000000,
      "maxGlobalCells": 12000000,
      "nCellsBetweenLevels": 1,
      "resolveFeatureAngle": 40,
      "nSmoothPatch": 4,
      "nFeatureSnapIter": 15,
      "implicitFeatureSnap": false,
      "explicitFeatureSnap": true
    },
    
    "LAYERS": {
      "nSurfaceLayers": 8,
      "minThickness_abs": 5.0e-7,
      "expansionRatio": 1.15,
      "nGrow": 1,
      "featureAngle": 50,
      "maxThicknessToMedialRatio": 0.4,
      "minMedianAxisAngle": 85
    }
  }
}